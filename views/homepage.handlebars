{{#if posts}}
{{#each posts as |post|}}

<div class="post-card">
    <h1 class="title"> <a class="title" href="/postpage/{{post.id}}">{{post.title}} </a> by {{post.user.name}}</h1>
    <h6 class="timestamp"> {{post.createdAt}} </h6>

    {{#if comments}}
    <div class="comm-card">
        <h4>{{comments.0.content}} - {{comments.0.user.name}}</h4>
    </div>
    {{/if}}
</div>
{{/each}}
{{else}}
<h1>No Posts yet, head to your dashboard to post</h1>
{{/if}}